@{
    ViewBag.Title = "Doctor";
}

<h1>Fever Check</h1>

<form id="doctorsForm" asp-action="FeverCheck" asp-controller="Doctor" method="post">
    <div class="inputwrapper">
        <label>Write in your temperature</label>
        <input type="text" name="temp" placeholder="temperature">

    </div>
    <div class="inputwrapper">
        <label>Choose temperature measurement</label>
        <select name="type" id="tempType">
            <option value="Celsius" selected>Celsius</option>
            <option value="Fahrenheit">Fahrenheit</option>
        </select>
    </div>
    <div class="inputwrapper">
        <input type="submit" value="Check fever and hypothermia">
    </div>
</form>
